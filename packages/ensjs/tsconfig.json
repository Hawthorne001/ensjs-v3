{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist"
	},
	"include": [
		"hardhat.config.cts",
		"./scripts",
		"./deploy",
		"./test",
		"typechain/**/*"
	],
	"exclude": ["node_modules"]
}
